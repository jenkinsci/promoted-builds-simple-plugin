<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
<j:getStatic var="updateRun" className="hudson.model.Run" field="UPDATE"/>
<j:set var="canPromote" value="${h.hasPermission(it.project,updateRun)}"/>
<j:set var="hasLevel" value="${it.level != null}"/>
<j:set var="hasHistory" value="${it.causes != null and it.causes.size() > 0}"/>
<j:if test="${canPromote or hasLevel or hasHistory}">
  <t:summary icon="${hasLevel ? 'star-gold.gif' : 'star.gif'}">
    <j:if test="${hasLevel}"><h4>${it.level}</h4></j:if>
    <j:if test="${canPromote}">
      <div id="promotemenu" class="yuimenu" style="width:16em;float:left">
        <div class="bd"></div>
      </div>
      <script language="javascript">// &lt;![CDATA[
      YAHOO.util.Event.onContentReady("promotemenu", function () {
        var promoteMenu = new YAHOO.widget.Menu("promotemenu",
          {
            position: "static",
            hidedelay: 750,
            lazyload: true,
            effect: {
                effect: YAHOO.widget.ContainerEffect.FADE,
                duration: 0.25
            },
            itemdata: [ { text: "${%Promote Build}",
                          submenu: { id: "promotechoices", itemdata: [
                      <j:if test="${hasLevel}">
                            { text: "${%None}", url: "promote/?level=0" },
                      </j:if>
                      <j:forEach var="level" indexVar="i" items="${it.allPromotionLevels}">
                            { text: "${level.name}", url: "promote/?level=${i+1}"
                              <j:if test="${it.level == level.name}">, checked: true</j:if> },
                      </j:forEach>
                          ] }
                        } ]
          }
        );
        promoteMenu.render();
      });
      // ]]&gt;</script>
    </j:if>
	<j:if test="${hasHistory}">
		<div style="float:left; margin-left: 30px">
		<b>Promotion History</b>
		<table>
		<j:forEach var="cause" items="${it.causes}">
			<j:set var="hasHistoryLevel" value="${cause.levelValue > 0}"/>
			<tr>
				<td><img src="${Hudson.RESOURCE_PATH}/images/16x16/${hasHistoryLevel ? 'star-gold.gif' : 'star.gif'}"/>
					${cause.levelName}</td>
				<td>${cause.getDate()}</td>
				<td>${cause.getUserName()}</td>
			</tr>
		</j:forEach>
		</table>
		</div>
	</j:if>
  </t:summary>
</j:if>
</j:jelly>
